{
  "dashboard": {
    "title": "CarbonShift - AI-Powered Carbon Dashboard",
    "description": "Real-time CO2 emissions monitoring with AI-powered optimization insights",
    "tags": ["carbon", "sustainability", "ai", "aws", "hackathon"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "type": "row",
        "title": "Overview",
        "gridPos": {
          "x": 0,
          "y": 0,
          "w": 24,
          "h": 1
        },
        "collapsed": false
      },
      {
        "id": 2,
        "type": "stat",
        "title": "Current CO2 Emissions (Sweden)",
        "description": "Real-time CO2 emissions from all instances in eu-north-1",
        "gridPos": {
          "x": 0,
          "y": 1,
          "w": 6,
          "h": 4
        },
        "targets": [
          {
            "expr": "sum(instance_co2_emissions_g_hour{country=\"SE\"})",
            "legendFormat": "Total CO2",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "justifyMode": "auto",
          "textMode": "value_and_name",
          "reduceOptions": {
            "values": false,
            "fields": "",
            "calcs": ["lastNotNull"]
          }
        },
        "fieldConfig": {
          "defaults": {
            "unit": "g/h",
            "decimals": 2,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": null,
                  "color": "green"
                },
                {
                  "value": 2,
                  "color": "yellow"
                },
                {
                  "value": 5,
                  "color": "red"
                }
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "type": "stat",
        "title": "Grid Carbon Intensity (Sweden)",
        "description": "Current carbon intensity of Swedish electricity grid",
        "gridPos": {
          "x": 6,
          "y": 1,
          "w": 6,
          "h": 4
        },
        "targets": [
          {
            "expr": "grid_carbon_intensity_g_kwh{country=\"SE\"}",
            "legendFormat": "Sweden",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "textMode": "value_and_name",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          }
        },
        "fieldConfig": {
          "defaults": {
            "unit": "gCOâ‚‚/kWh",
            "decimals": 1,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": null,
                  "color": "green"
                },
                {
                  "value": 100,
                  "color": "yellow"
                },
                {
                  "value": 300,
                  "color": "red"
                }
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "type": "stat",
        "title": "Active Instances",
        "description": "Number of monitored instances",
        "gridPos": {
          "x": 12,
          "y": 1,
          "w": 6,
          "h": 4
        },
        "targets": [
          {
            "expr": "count(up{job=\"node-exporter\"})",
            "legendFormat": "Instances",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "none",
          "colorMode": "value",
          "textMode": "value_and_name",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          }
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": null,
                  "color": "red"
                },
                {
                  "value": 3,
                  "color": "green"
                }
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "type": "stat",
        "title": "Potential Savings vs Germany",
        "description": "CO2 saved by running in Sweden instead of Germany",
        "gridPos": {
          "x": 18,
          "y": 1,
          "w": 6,
          "h": 4
        },
        "targets": [
          {
            "expr": "sum(instance_co2_emissions_g_hour{country=\"DE\"}) - sum(instance_co2_emissions_g_hour{country=\"SE\"})",
            "legendFormat": "Savings",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "textMode": "value_and_name",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          }
        },
        "fieldConfig": {
          "defaults": {
            "unit": "g/h",
            "decimals": 2,
            "color": {
              "mode": "palette-classic"
            }
          }
        }
      },
      {
        "id": 6,
        "type": "row",
        "title": "\"What If\" Analysis - Regional Comparison",
        "gridPos": {
          "x": 0,
          "y": 5,
          "w": 24,
          "h": 1
        },
        "collapsed": false
      },
      {
        "id": 7,
        "type": "timeseries",
        "title": "CO2 Emissions: Sweden (Actual) vs Other Regions",
        "description": "Compare actual emissions in Sweden against \"what if\" scenarios in other EU regions",
        "gridPos": {
          "x": 0,
          "y": 6,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "sum by(country) (instance_co2_emissions_g_hour)",
            "legendFormat": "{{country}}",
            "refId": "A"
          }
        ],
        "options": {
          "tooltip": {
            "mode": "multi",
            "sort": "desc"
          },
          "legend": {
            "showLegend": true,
            "displayMode": "table",
            "placement": "bottom",
            "calcs": ["lastNotNull", "mean"]
          }
        },
        "fieldConfig": {
          "defaults": {
            "unit": "g/h",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 20,
              "lineWidth": 2,
              "showPoints": "never"
            },
            "color": {
              "mode": "palette-classic"
            }
          },
          "overrides": [
            {
              "matcher": {
                "id": "byName",
                "options": "SE"
              },
              "properties": [
                {
                  "id": "color",
                  "value": {
                    "fixedColor": "green",
                    "mode": "fixed"
                  }
                },
                {
                  "id": "custom.lineWidth",
                  "value": 3
                }
              ]
            },
            {
              "matcher": {
                "id": "byName",
                "options": "DE"
              },
              "properties": [
                {
                  "id": "color",
                  "value": {
                    "fixedColor": "red",
                    "mode": "fixed"
                  }
                }
              ]
            },
            {
              "matcher": {
                "id": "byName",
                "options": "GB"
              },
              "properties": [
                {
                  "id": "color",
                  "value": {
                    "fixedColor": "orange",
                    "mode": "fixed"
                  }
                }
              ]
            },
            {
              "matcher": {
                "id": "byName",
                "options": "FR"
              },
              "properties": [
                {
                  "id": "color",
                  "value": {
                    "fixedColor": "blue",
                    "mode": "fixed"
                  }
                }
              ]
            }
          ]
        }
      },
      {
        "id": 8,
        "type": "bargauge",
        "title": "\"What If\" Regional Comparison (Current)",
        "description": "Current CO2 emissions if workload ran in different regions",
        "gridPos": {
          "x": 12,
          "y": 6,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "sum by(country) (instance_co2_emissions_g_hour)",
            "legendFormat": "{{country}}",
            "refId": "A"
          }
        ],
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient",
          "showUnfilled": true,
          "text": {
            "valueSize": 16
          }
        },
        "fieldConfig": {
          "defaults": {
            "unit": "g/h",
            "decimals": 2,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": null,
                  "color": "green"
                },
                {
                  "value": 1,
                  "color": "yellow"
                },
                {
                  "value": 2,
                  "color": "orange"
                },
                {
                  "value": 3,
                  "color": "red"
                }
              ]
            },
            "mappings": [
              {
                "type": "value",
                "options": {
                  "SE": {
                    "text": "Sweden (ACTUAL)"
                  },
                  "DE": {
                    "text": "Germany (What If)"
                  },
                  "GB": {
                    "text": "United Kingdom (What If)"
                  },
                  "FR": {
                    "text": "France (What If)"
                  }
                }
              }
            ]
          }
        }
      },
