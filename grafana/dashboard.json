          "x": 12,
          "y": 33,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "100 - (avg by(role) (irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
            "legendFormat": "{{role}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
